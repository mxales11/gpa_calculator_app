  <%= form_for([@student, @taken_course]) do |f| %>

    <% if @taken_course.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@taken_course.errors.count, "error") %> prohibited this course taken from being saved:</h2>

        <ul>
        <% @taken_course.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
