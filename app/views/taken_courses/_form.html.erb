<div id="add_taken_course_form">

    <%= form_for([@student, @taken_course], :remote => true) do |f|  %>

      <% if @taken_course.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@taken_course.errors.count, "error") %> prohibited this course taken from being saved:
          </h2>

          <ul>
            <% @taken_course.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
          <br></br>
          <%= f.label :name %>
          <%= f.text_field :name %>
          <%= f.label :credits %>
          <%= f.select :credits, options_for_select(['-','1','2', '3', '4', '5', '6', '7', '8']) %>
           <%= f.label :grade %>
          <%= f.select :grade, options_for_select(['-','A','AB', 'B', 'BC', 'C', 'CD', 'D', 'F']) %>
           <%= f.label :is_major %>
          <%= f.check_box :is_major %>
          <br></br>
         
        <%= f.submit "Add", class: "btn btn-primary" %>
        <% end %>  
</div>


